<link rel="stylesheet" href="/css/user_profile.css">
<h1>
    Codial / profile page
</h1>
<!-- Showing the profile image -->
<img src="<%= user.avatar %>" alt="<%= user.name%>" width="100">
<!--  we cant directly get the file as we have to make uplode folder available to the browser  we app.use in index.js-->

<% if(user.id == profile_user.id){ %>
    <p><%= profile_user.name %></p>
    <p><%= profile_user.email %></p><br><br>
    <!-- if user matches then show the form |  enctype multipart/form-data  telsthe form that we will be sending a large 
     seream of bit or a file along with the plane text-->
    <form action="/users/update/<%= profile_user.id %>" method="POST"  enctype="multipart/form-data" >
        <input type="text" name="name" placeholder="Your Name" value="<%= profile_user.name %>" required>
        <input type="email" name="email" placeholder="Your Email" value="<%= profile_user.email %>" required>
        <!-- input for file -->
        <input type="file" name="avatar" placeholder="Profile Picture">
        <input type="submit"  value="Update">
    </form>
    
<%}else{%>    
    <!-- else show only the profile info -->
    <p><%= profile_user.name %></p>
    <p><%= profile_user.email %></p>
<%} %>